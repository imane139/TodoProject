@* injecter un service *@
@inject IHttpContextAccessor HttpContextAccessor 

@{
    var isAuth = HttpContextAccessor.HttpContext.Session.GetString("isAuth");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication5</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication5.styles.css" asp-append-version="true" />
</head>
<body class="@(ViewBag.Theme ?? HttpContextAccessor.HttpContext?.Items["theme"] ?? "light")">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Todo" asp-action="Index">TodoProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (string.IsNullOrEmpty(isAuth))
                        {
                             <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="login">Se connecter</a>
                            </li>
                        }
                        else
                        {
                             <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="logout">se Deconnecter</a>
                        </li>
                        }
                        <li class="nav-item">
                        <a asp-controller="Theme" asp-action="Change" asp-route-mode="dark">🌙</a>
                        </li>
                        <li class="nav-item">
                        <a asp-controller="Theme" asp-action="Change" asp-route-mode="light">☀️</a>
                        </li>


                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5 ">
            @RenderBody()
        </main>
    </div>

  @*   <footer class="border-top footer p-1 text-muted">
        <div class="container">
            &copy; 2025 - TodoProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
